

<!-- Pass in data from server.js -->

<div class="contianer">
    <div class="row">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6">
            <div class="row">
                <h1 class="center">Burger App</h1>
            </div>
            <div class="row">
                <img src="./assets/img/burger.png" alt="burger">
            </div>
            <div class="row">
                <form class="create-form formcenter">
                    <div class="form-group">
                        <label for="newBurger">Input the name of a burger you want to eat, then click Submit</label>
                        <textarea class="form-control" id="newBurger" name="newBurger" rows="1"></textarea>
                    </div>
                    <button class="btn btn-primary createBurger" type="submit">Submit</button>
                </form>
            </div>
            <div class="row space"></div>
            <div class="row">
                <div class="col-sm-6">
                    <h3>Burgers to Eat</h3>
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <li>   
                                    <div class="well well-sm">             
                                        {{this.id}}: {{this.burger_name}} <button data-id="{{this.id}}" class="devoure btn btn-primary" data-neweDevoure="{{devoure}}">Devoure</button>
                                    </div>
                                </li>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
                <div class="col-sm-6">
                      <h3>Burgers Eatten</h3>
                        <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                            <li>
                                <div class="well  well-sm">
                                    {{this.id}}: {{this.burger_name}}
                                </div>
                            </li>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
        </div>
    </div>
</div>